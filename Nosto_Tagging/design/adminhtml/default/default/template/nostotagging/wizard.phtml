<?php
/**
 * @var $this 		 Nosto_Tagging_Block_Adminhtml_Wizard
 * @var $nostoHelper Nosto_Tagging_Helper_Data
 */
$nostoHelper = Mage::helper('nosto_tagging');
?>
<div class="content-header">
	<h3><?php echo $this->__('Nosto'); ?></h3>
</div>
<?php if ( !Mage::app()->isSingleStoreMode() ): ?>
	<?php echo $this->getChildHtml('store_switcher'); ?>
<?php endif;?>
<?php if ($this->getAccount() === null): ?>
	<div>
		<h2><?php echo $this->__('Add Nosto to your %s shop', $nostoHelper->escapeHtml(Mage::app()->getStore()->getName()));?></h2>
		<p><?php echo $this->__('Do you have an existing Nosto account?');?></p>
		<div id="nosto_has_account">
			<input type="radio" name="nosto_has_account_radio" id="nosto_has_account_yes" value="1" checked="checked">
			<label for="has_nosto_account_yes"><?php echo $this->__('Yes');?></label>
			<input type="radio" name="nosto_has_account_radio" id="nosto_has_account_no" value="0">
			<label for="has_nosto_account_no"><?php echo $this->__('No');?></label>
		</div>
		<div id="nosto_old_account"><?php echo $this->getChildHtml('nosto.form.account.connect'); ?></div>
		<div id="nosto_new_account" style="display: none;"><?php echo $this->getChildHtml('nosto.form.account.create'); ?></div>
	</div>
<?php else: ?>
	<div>
		<a id="nosto_account_settings" href="#"><?php echo $this->__('Account settings');?></a>
		<div id="nosto_installed" style="<?php if ($this->getIframeUrl()) echo 'display: none;'; ?>"><?php echo $this->getChildHtml('nosto.form.account.remove'); ?></div>
		<?php if ($this->getIframeUrl()): ?>
			<div id="nosto_iframe"><?php echo $this->getChildHtml('nosto.iframe'); ?></div>
		<?php endif; ?>
	</div>
<?php endif; ?>
